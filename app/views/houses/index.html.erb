<div class="row">
  <div class="col-md-3">
    <h2 style="color: green">Assets' Worth:</h2>
    <h2 style="color: green"><%= number_with_precision(@total, :precision => 2, :delimiter => ',') %></h2>
    <br />
    <hr>
        <%= button_to "New House", new_house_path, :class => "btn-primary" %>
  </div>
  
  <div class="col-md-9">
    <%= @houses.each do |house| %>
      <div class="row">
        <div class="col-md-6">
          <%= image_tag house.photo.thumb.url, :class => "img-polaroid" %> <br />
          <br />
          
          <%= link_to "Edit House Details", edit_house_path(house) %> | <%= link_to "Delete House Record", house, :confirm => "Are you sure you want to delete this record?", :method => :delete %>
        </div>
        <div class="col-md-6">
          <table class="table">
            <tr>
              <td>House ID</td><td><%= house.id %></td>
            </tr>
            <tr>
              <td>Location</td><td><%= house.location %></td>
            </tr>
            <tr>
              <td>Number of Bedrooms</td><td><%= house.numberOfBedRooms %></td>
            </tr>
            <tr>
              <td>Numberof Bathrooms</td><td><%= house.numberOfBathRooms %></td>
            </tr>
            <tr>
              <td>Number of Reception rooms</td><td><%= house.numberOfReceptionRooms %></td>
            </tr>
            <tr>
              <td>Size</td><td><%= house.size %> Sq feet</td>
            </tr>
            <tr>
              <td>Security</td><td><%= house.security %></td>
            </tr>
            <thead>
              <td>Cost of House</td><td>KES <%= number_with_precision(house.price, :precision => 2, :delimiter => ',') %></td>
            </thead>
          </table>
        </div>
      </div>
      
      <hr>
    <% end %>
  </div>
  
  
</div>